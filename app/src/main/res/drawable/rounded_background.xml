<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 角を丸める -->
    <corners android:radius="12dp" />

    <!-- 背景色を指定 -->
    <solid android:color="@android:color/white" />

    <!-- 枠線（必要に応じて） -->
    <stroke
        android:width="2dp"
        android:color="@android:color/darker_gray" />

    <!-- 内側のパディング -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
</shape>
